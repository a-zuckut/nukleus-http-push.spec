property newSourceInputRef ${nuklei:newReferenceId()} # external scope

property nuklei ${nuklei:directory("target/nukleus-itests").streamsCapacity(1024 * 1024, 64 * 1024)}

property sourceInput ${nuklei.streams("http-push", "source")}
property sourceOutputEst ${nuklei.streams("source", "http-push#target")}

property newSourceInputId ${nuklei:newStreamId()}
property newSourceInputId2 ${nuklei:newStreamId()}
property newSourceCorrelationId ${nuklei:newCorrelationId()}
property newSourceCorrelationId2 ${nuklei:newCorrelationId()}

connect await ROUTED_OUTPUT
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(sourceInput.throttle)}
        option writer ${agrona:oneToOneWriter(sourceInput.buffer)}
connected

write [0x00 0x00 0x00 0x01]
      ${newSourceInputId}
      ${newSourceInputRef}
      ${newSourceCorrelationId}
      [0x00] [0x07] ":scheme" [0x04] "http"
      [0x00] [0x07] ":method" [0x03] "GET"
      [0x00] [0x05] ":path" [0x05] "/data"
      [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
      [0x00] [0x0f] "x-poll-interval" [0x01] "2"
write flush

read [0x40 0x00 0x00 0x02]
read ${newSourceInputId}
read [0..4]

write [0x00 0x00 0x00 0x03]
      ${newSourceInputId}
write flush

write await PUSH_PROMISE_RECEIVED

write [0x00 0x00 0x00 0x01]
      ${newSourceInputId2}
      ${newSourceInputRef}
      ${newSourceCorrelationId2}
      [0x00] [0x07] ":scheme" [0x04] "http"
      [0x00] [0x07] ":method" [0x03] "GET"
      [0x00] [0x05] ":path" [0x05] "/data"
      [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
      [0x00] [0x0f] "x-poll-interval" [0x01] "2"
      [0x00] [0x0c] "x-reactivity" [0x18] "http-push-sync, no-cache"
      [0x00] [0x0d] "cache-control" [0x08] "no-cache"
write flush

read [0x40 0x00 0x00 0x02]
read ${newSourceInputId2}
read [0..4]

write [0x00 0x00 0x00 0x03]
      ${newSourceInputId2}
write flush

close
closed

connect await ROUTED_OUTPUT
        agrona://stream/bidirectional
        option reader ${agrona:oneToOneReader(sourceOutputEst.buffer)}
        option writer ${agrona:oneToOneWriter(sourceOutputEst.throttle)}
connected

read [0x00 0x00 0x00 0x01]
read ([0..8]:sourceOutputEstId)
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read ${newSourceCorrelationId}
read [0x00] [0x07] ":status" [0x03] "200"
read [0x00] [0x0e] "content-length" [0x02] "11"

write [0x40 0x00 0x00 0x02]
      ${sourceOutputEstId}
      [0x00 0x02 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${sourceOutputEstId}
read [0x00 0x00]
read [0x00] [0x07] ":scheme" [0x04] "http"
read [0x00] [0x07] ":method" [0x03] "GET"
read [0x00] [0x05] ":path" [0x05] "/data"
read [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
read [0x00] [0x0f] "x-poll-interval" [0x01] "2"
read [0x00] [0x0c] "x-reactivity" [0x18] "http-push-sync, no-cache"
read [0x00] [0x0d] "cache-control" [0x08] "no-cache"

read notify PUSH_PROMISE_RECEIVED

# May get a window frame of 0
write [0x40 0x00 0x00 0x02]
      ${sourceOutputEstId}
      [0x00 0x00 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${sourceOutputEstId}
read [0x00 0x0b]
read "hello world"

write [0x40 0x00 0x00 0x02]
      ${sourceOutputEstId}
      [0x00 0x02 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x03]
     ${sourceOutputEstId}

# PUSH promise and response 2

read [0x00 0x00 0x00 0x01]
read ([0..8]:sourceOutputEstId2)
read [0x00 0x00 0x00 0x00 0x00 0x00 0x00 0x00]
read ${newSourceCorrelationId2}
read [0x00] [0x07] ":status" [0x03] "200"
read [0x00] [0x0e] "content-length" [0x02] "12"

write [0x40 0x00 0x00 0x02]
      ${sourceOutputEstId2}
      [0x00 0x02 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${sourceOutputEstId2}
read [0x00 0x00]
read [0x00] [0x07] ":scheme" [0x04] "http"
read [0x00] [0x07] ":method" [0x03] "GET"
read [0x00] [0x05] ":path" [0x05] "/data"
read [0x00] [0x0a] ":authority" [0x0e] "localhost:8080"
read [0x00] [0x0f] "x-poll-interval" [0x01] "2"
read [0x00] [0x0c] "x-reactivity" [0x18] "http-push-sync, no-cache"
read [0x00] [0x0d] "cache-control" [0x08] "no-cache"

# May get a window frame of 0
write [0x40 0x00 0x00 0x02]
      ${sourceOutputEstId2}
      [0x00 0x00 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x02]
read ${sourceOutputEstId2}
read [0x00 0x0c]
read "hello world2"

write [0x40 0x00 0x00 0x02]
      ${sourceOutputEstId2}
      [0x00 0x02 0x00 0x00]
write flush

read [0x00 0x00 0x00 0x03]
     ${sourceOutputEstId2}

close
closed
